{
  "name": "i-love-github",
  "version": "0.21.7",
  "private": true,
  "homepage": "https://ilovegithub.vercel.app",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "prepare": "husky",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "prebuild": "node scripts/build-blog.js",
    "postbuild": "next-sitemap",
    "export": "next export",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "commit": "cz",
    "hugo:build": "hugo --gc --minify -s blog",
    "hugo:serve": "hugo server -s blog"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
