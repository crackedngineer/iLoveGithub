# === GitHub OAuth ===
# GitHub personal access token for client-side access (read-only access recommended)
NEXT_PUBLIC_GITHUB_TOKEN=your_public_github_token_here

# GitHub OAuth App credentials for user login via GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret


# === NextAuth Configuration ===
# Used to encrypt session JWTs (should be a long random string)
NEXTAUTH_SECRET=your_nextauth_secret_here

# The base URL of your application (used by NextAuth)
# In development: http://localhost:3000
# In production: https://yourdomain.com
NEXTAUTH_URL=http://localhost:3000


# === Email Provider (SMTP) ===
# SMTP server configuration for sending login and notification emails
EMAIL_SERVER=true                               # For development set it to false inorder to use Etheral Email
EMAIL_SERVER_HOST=smtp.your-email-provider.com  # e.g., smtp.gmail.com
EMAIL_SERVER_PORT=587                           # typically 587 for TLS, or 465 for SSL
EMAIL_SERVER_SECURE=false                       # true for SSL, false for TLS
EMAIL_SERVER_USER=your_email@example.com        # your SMTP username/email
EMAIL_SERVER_PASSWORD=your_email_app_password   # app-specific password or SMTP password


# === Ethereal Mail (for testing emails) ===
# Used only for development/testing with fake SMTP service
ETHEREAL_EMAIL=your_ethereal_email
ETHEREAL_PASSWORD=your_ethereal_password


# === Google Analytics ===
# Google Analytics Measurement ID (starts with "G-")
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX


# === Application Settings ===
# Maximum number of repositories to fetch from GitHub
NEXT_PUBLIC_MAX_REPO_LIMIT=100


# === Donation Information ===
# Your UPI ID to receive donations
NEXT_PUBLIC_DONATION_UPI_ID=your_upi_id@bank


# === Upstash Redis ===
# Used for rate-limiting, caching, or session storage
KV_REST_API_TOKEN=your_upstash_token
KV_REST_API_URL=https://your-upstash-instance.upstash.io


# === Vercel Blob Storage ===
# Token to read/write blobs (images, files, etc.)
BLOB_READ_WRITE_TOKEN=your_vercel_blob_rw_token
BLOB_ICON_BASE_URL=your_blob_base_url_for_storing_icons
